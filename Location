import java.util.ArrayList;
/**
 * 
 * The location class is used to store the locations of our game. Each 
 * location has the option to store an ArrayList of objects.
 * @author Helen Amaro and Sarah Shapard
 *
 */

public class Location {

	private String name;
	private String description;

	ArrayList<Item> arrayItems = new ArrayList<Item>();
	int itemCount = 0;
	
	/**
	 * This constructor is used to construct a new location with no name or description.
	 */
	public Location()
	{
		name = "";
		description = "";
	}
	
	/**
	 * This constructor is used to construct a new location with a given name
	 * and description.
	 * @param name The name of the location.
	 * @param description The description of the location.
	 */
	public Location(String name, String description)
	{
		this.name = name;
		this.description = description;
	}
	
	
	public String getName()
	{
		return name;
	}
	
	public void setName(String name)
	{
		this.name = name;
	}
	
	public String getDescription()
	{
		return description;
	}
	
	public void setDescription(String description)
	{
		this.description = description;
	}
	
	public void addItem(Item obj)
	{
		arrayItems.add(obj);
		itemCount++;
	}
	
	public boolean itemPresent(String itemName)
	{
		for (Item temp: arrayItems)
		{
			if(temp.getName().equals(itemName))
			{
				return true;
			}
		}
		
		return false;
	}
	
	public Item itemReturn(String itemName)
	{
		for (Item temp: arrayItems)
		{
			if(temp.getName().equals(itemName))
			{
				return temp;
			}
		}
		
		Item noItem = null;
		return noItem;
	}
	
	public int numItems()
	{
		return itemCount;
	}
	
	public Item itemRemove(String itemName)
	{
		Item temp = itemReturn(itemName);
		arrayItems.remove(temp);
		itemCount--;
		return temp;
	}
}
